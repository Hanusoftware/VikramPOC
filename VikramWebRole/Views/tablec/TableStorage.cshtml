@model IEnumerable<VikramWebRole.Models.TableModel>
@{
    ViewBag.Title = "TableStorage";
}

<h2>TableStorage</h2>
@Html.ActionLink("Create", "CreateTable")
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Contact No
        </th>
        <th>
            Address
        </th>
        <th>
            Add
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Create", "CreateTable")
            </td>
            <td>
                @Html.ActionLink("Edit", "CreateTable", new { pkey = item.ContactNo, rkey = item.Email })
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteTable", new { pkey = item.ContactNo, rkey = item.Email })
            </td>
        </tr>
    }
</table>


